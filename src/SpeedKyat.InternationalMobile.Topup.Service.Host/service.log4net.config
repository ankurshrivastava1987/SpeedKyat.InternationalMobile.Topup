<?xml version="1.0" encoding="utf-8"?>

<configuration>

  <log4net>

    <appender name="Audit" type="log4net.Appender.RollingFileAppender">
      <file value="C:\Logs\SpeedKyat.International.MobileTopup.Service.Host\audit\audit.log" />
      <appendToFile value="true" />
      <maximumFileSize value="100KB" />
      <maxSizeRollBackups value="100" />
      <rollingStyle value="Date" />

      <filter type="log4net.Filter.LoggerMatchFilter">
        <!-- allows this sub-namespace to be logged... -->
        <loggerToMatch value="Kispanadi.Common.Castle.Services.ServiceParameterInspector" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <appender name="Error" type="log4net.Appender.RollingFileAppender">
      <file value="C:\Logs\SpeedKyat.International.MobileTopup.Service.Host\error\error.log" />
      <appendToFile value="true" />
      <maximumFileSize value="100KB" />
      <maxSizeRollBackups value="100" />
      <rollingStyle value="Date" />

      <filter type="log4net.Filter.LoggerMatchFilter">
        <!-- allows this sub-namespace to be logged... -->
        <loggerToMatch value="Kispanadi.Common.Castle.Services.ServiceErrorHandler" />
      </filter>
      <filter type="log4net.Filter.DenyAllFilter" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <appender name="ServiceRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="C:\Logs\SpeedKyat.International.MobileTopup.Service.Host\all\all.log" />
      <appendToFile value="true" />
      <maximumFileSize value="100KB" />
      <maxSizeRollBackups value="100" />
      <rollingStyle value="Date" />

      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
      <mapping>
        <level value="ERROR" />
        <foreColor value="White" />
        <backColor value="Red, HighIntensity" />
      </mapping>
      <mapping>
        <level value="DEBUG" />
        <backColor value="Green" />
      </mapping>
      <mapping>
        <level value="INFO" />
        <foreColor value="White" />
        <backColor value="Green" />
      </mapping>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline" />
      </layout>
    </appender>

    <root>
      <level value="ALL" />
      <appender-ref ref="ServiceRollingFileAppender" />
      <appender-ref ref="ColoredConsoleAppender" />
      <appender-ref ref="Error" />
      <appender-ref ref="Audit" />
    </root>

  </log4net>

</configuration>